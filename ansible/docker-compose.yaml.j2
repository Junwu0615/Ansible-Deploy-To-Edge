version: '3.8'

services:
  edge_app:
    # 從 Ansible 變數中取得 Registry 地址
    image: "{{ REGISTRY_HOST_PORT }}/pc-hello-world:latest"
    # 使用裝置 ID 確保容器名稱唯一
    container_name: edge_service_{{ DEVICE_ID }}
    ports:
      - "{{ DEPLOY_PORT }}:80"

    environment:
      DEVICE_ID: "{{ DEVICE_ID }}"
      LOG_LEVEL: "{{ LOG_LEVEL }}"

    restart: always